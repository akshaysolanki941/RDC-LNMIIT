<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="10dp"
    app:cardBackgroundColor="?attr/background"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:src="@drawable/my_photo"
            app:civ_border_color="?attr/text"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/circleImageView"
            android:fontFamily="@font/overpass_semi_bold"
            android:padding="6dp"
            android:text="Akshay Solanki"
            android:textColor="?attr/text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m"
            android:layout_toEndOf="@+id/circleImageView"
            android:fontFamily="@font/overpass_extralight"
            android:padding="6dp"
            android:text="Android Developer"
            android:textColor="?attr/text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/n"
            android:layout_toEndOf="@+id/circleImageView"
            android:fontFamily="@font/overpass_extralight"
            android:padding="6dp"
            android:singleLine="true"
            android:text="akshaysolanki941@gmail.com"
            android:textColor="?attr/text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/o"
            android:layout_toEndOf="@+id/circleImageView"
            android:fontFamily="@font/overpass_extralight"
            android:padding="6dp"
            android:text="+91-8233623549"
            android:textColor="?attr/text"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>